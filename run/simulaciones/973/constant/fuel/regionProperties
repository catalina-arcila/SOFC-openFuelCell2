(
    (fuel and water)
    {
        type            constant;
        sigma           0.07;
    }
);

aspectRatio
(
    (fuel in water)
    {
        type            constant;
        E0              1.0;
    }

    (water in fuel)
    {
        type            constant;
        E0              1.0;
    }
);

