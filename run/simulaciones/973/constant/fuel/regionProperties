FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type    singlePhaseSystem;
//type          interfaceCompositionPhaseChangeTwoPhaseSystem;

phases (fuel);

LTS
{
    maxCo               0.7;
    maxAlphaCo          5;

    rDeltaTSmoothingCoeff 0.05;
    rDeltaTDampingCoeff 0.5;
    nAlphaSpreadIter    0;
    nAlphaSweepIter     0;
    maxDeltaT           1;
}

fuel
{
    type            reactingPhaseModel;
    diameterModel   isothermal;
    isothermalCoeffs
    {
        d0              3e-3;
        p0              1e5;
    }
    Sc              0.7;

    residualAlpha   1e-6;

    diffusivity
    {
        type        binaryFSG;
        Tname       T.fuel;
        pName       p_rgh;
        speciesA    H2;
        speciesB    H2O;
        // --------------------------------------
        //type        fixedDiffusivity;
        //diff0       diff0 [0 2 -1 0 0 0 0]  1.7e-4;
    }
}

water
{
    type            purePhaseModel;
    diameterModel constant;
    constantCoeffs
    {
        d               1.5e-4;
    }

    residualAlpha   1e-6;
}

blending
{
    default
    {
        type            none;//linear;
        continuousPhase fuel;
        minFullyContinuousAlpha.fuel 0.7;
        minPartlyContinuousAlpha.fuel 0.3;
        minFullyContinuousAlpha.water 0.7;
        minPartlyContinuousAlpha.water 0.3;
    }

